{
  "name": "point-of-sale",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Azuony Tochukwu Franklin",
    "email": "franktochi156@gmail.com",
    "url": "https://github.com/tchfrnkln"
  },
  "description": "Inventory and Stock Management for Physical Stores and Businesses",
  "main": "electron/dist/main.js",


  "scripts": {
    "dev": "next dev",
    "build:web": "next build",
    "start": "next start",

    "electron:build": "tsc -p electron",
    "electron:start": "wait-on http://localhost:3000 && electron .",
    "desktop": "concurrently \"pnpm dev\" \"pnpm electron:build --watch\" \"pnpm electron:start\"",

    "build:electron": "tsc -p electron",
    "build:desktop": "pnpm build:web && pnpm build:electron && electron-builder",

    "lint": "eslint"
  },

  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/auth-helpers-nextjs": "^0.15.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "escpos": "3.0.0-alpha.6",
    "escpos-usb": "3.0.0-alpha.4",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.3",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vaul": "^1.1.2",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.9"
  },

  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/electron": "^1.6.12",
    "@types/escpos": "^2.5.5",
    "@types/node": "^20.19.27",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "shadcn-ui": "^0.9.5",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },

  "build": {
    "appId": "com.smartpointofsale.pos",
    "productName": "Smart POS Desktop",
    "asar": true,

    "directories": {
      "output": "release"
    },

    "files": [
      "dist-electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}
